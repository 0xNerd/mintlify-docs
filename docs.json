{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "ZK Send Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Main",
        "components": [
          "search",
          "theme"
        ],
        "groups": [
          {
            "group": "Documentation",
            "pages": [
              "getting-started",
              "faq"
            ]
          },
          {
            "group": "Commands",
            "pages": [
              "commands/start",
              "commands/balance",
              "commands/send",
              "commands/wallets",
              "commands/import",
              "commands/delete",
              "commands/help"
            ]
          }
        ]
      }
    ]
  },
  "global": {
    "anchors": [
      {
        "anchor": "Status Page",
        "href": "https://status.zksend.app",
        "icon": "circle-exclamation"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": []
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/zksend",
      "telegram": "https://t.me/zksend_bot"
    }
  }
}
